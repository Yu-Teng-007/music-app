# 生产环境配置
NODE_ENV=production
PORT=3000

# 数据库配置 - 生产环境
DB_HOST=your-production-db-host
DB_PORT=3306
DB_USERNAME=music_app_user
DB_PASSWORD=admin123
DB_DATABASE=music_app_prod

# JWT配置 - 生产环境
JWT_SECRET=your-super-secure-jwt-secret-key-minimum-32-characters-long
JWT_EXPIRES_IN=24h

# 文件上传配置 - 生产环境
UPLOAD_PATH=/var/www/music-app/uploads
MAX_FILE_SIZE=100MB

# CORS配置 - 生产环境
CORS_ORIGIN=https://your-domain.com,https://www.your-domain.com

# 安全配置
HTTPS_ONLY=true
SECURE_COOKIES=true
HELMET_ENABLED=true

# 日志配置
LOG_LEVEL=error
LOG_FILE=/var/log/music-app/app.log

# 邮件配置 - 生产环境
MAIL_HOST=smtp.your-provider.com
MAIL_PORT=587
MAIL_USER=noreply@your-domain.com
MAIL_PASS=your-production-email-password
MAIL_FROM=noreply@your-domain.com

# Redis配置 - 生产环境
REDIS_HOST=your-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# API配置
API_PREFIX=api/v1
API_RATE_LIMIT=100

# CSRF和Session配置 - 生产环境
CSRF_SECRET=your-super-secure-csrf-secret-key-minimum-32-characters-long-change-this
SESSION_SECRET=your-super-secure-session-secret-key-minimum-32-characters-long-change-this

# 监控配置
SENTRY_DSN=your-sentry-dsn
HEALTH_CHECK_ENDPOINT=/health

# SSL配置
SSL_CERT_PATH=/etc/ssl/certs/your-domain.crt
SSL_KEY_PATH=/etc/ssl/private/your-domain.key
