# 开发环境配置
NODE_ENV=development
PORT=3000

# 数据库配置 - 开发环境
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=admin123
DB_DATABASE=music_app_dev

# JWT配置 - 开发环境
JWT_SECRET=dev-jwt-secret-key-for-development-only
JWT_EXPIRES_IN=7d

# 文件上传配置 - 开发环境
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=50MB

# CORS配置 - 开发环境
CORS_ORIGIN=http://localhost:3000,http://localhost:5173,http://localhost:5188,http://localhost:8080
FRONTEND_URL=http://localhost:5188

# 调试配置
DEBUG=true
LOG_LEVEL=debug

# 邮件配置 - 开发环境（可选）
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=your-dev-email@gmail.com
MAIL_PASS=your-dev-email-password
MAIL_FROM=your-dev-email@gmail.com

# Redis配置 - 开发环境（可选）
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# API配置
API_PREFIX=api/v1
API_RATE_LIMIT=1000

# CSRF和Session配置 - 开发环境
CSRF_SECRET=dev-csrf-secret-key-for-development-only-change-in-production
SESSION_SECRET=dev-session-secret-key-for-development-only-change-in-production
