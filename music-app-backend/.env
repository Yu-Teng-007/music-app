# 默认环境配置（开发环境）
# 注意：这个文件应该被 .gitignore 忽略
# 生产环境请使用 .env.production
# 开发环境请使用 .env.development

NODE_ENV=development
PORT=3000

# 数据库配置
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=admin123
DB_DATABASE=music_app_dev

# JWT配置
JWT_SECRET=dev-jwt-secret-key-for-development-only
JWT_EXPIRES_IN=7d

# 文件上传配置
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=50MB

# CORS配置
CORS_ORIGIN=http://localhost:3000,http://localhost:5173,http://localhost:8080

# 调试配置
DEBUG=true
LOG_LEVEL=debug
