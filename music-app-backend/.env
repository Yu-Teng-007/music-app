# 后端基础环境配置文件

# ===== 应用基础配置 =====
NODE_ENV=development
PORT=3000

# ===== 调试配置 =====
DEBUG=true
LOG_LEVEL=debug

# ===== 数据库配置 =====
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=admin123
DB_DATABASE=music_app_dev

# ===== 安全配置 =====
JWT_SECRET=dev-jwt-secret-key-for-development-only
JWT_EXPIRES_IN=7d
CSRF_SECRET=dev-csrf-secret-key-for-development-only-change-in-production
SESSION_SECRET=dev-session-secret-key-for-development-only-change-in-production

# ===== API服务配置 =====
API_PREFIX=api/v1
API_RATE_LIMIT=1000

# ===== 跨域配置 =====
CORS_ORIGIN=http://localhost:5188,http://127.0.0.1:5188,http://localhost:5189,http://127.0.0.1:5189
FRONTEND_URL=http://localhost:5188,http://127.0.0.1:5188,http://localhost:5189,http://127.0.0.1:5189

# ===== 文件上传配置 =====
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=50MB

# ===== 邮件配置（可选）=====
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=your-dev-email@gmail.com
MAIL_PASS=your-dev-email-password
MAIL_FROM=your-dev-email@gmail.com

# ===== Redis配置（可选）=====
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
