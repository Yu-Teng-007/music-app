# 应用配置
NODE_ENV=production
PORT=3000

# 数据库配置
DATABASE_HOST=localhost
DATABASE_PORT=3306
DATABASE_USERNAME=your_username
DATABASE_PASSWORD=your_password
DATABASE_NAME=music_app

# JWT配置
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d

# 文件上传配置
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# CORS配置 - 支持多个前端URL，用逗号分隔
FRONTEND_URL=https://yourusername.github.io/music-app,https://your-custom-domain.com

# 会话配置
SESSION_SECRET=your_session_secret_here
